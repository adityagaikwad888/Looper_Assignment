{
  "name": "backend-auth",
  "version": "1.0.0",
  "description": "Backend authentication system with JWT",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "logs": "tail -f logs/app.log",
